{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "No Comments24",

  "description": "Removes the comments section from News24. Because Racism. That's why.",
  "version": "1.1.1",
  "author": "Tali Luvhengo",
  "homepage_url": "http://www.semicolon.co.za",
  "browser_action": {
    "default_icon": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.news24.com/*", "*://*.fin24.com/*", "*://*.sport24.com/*"],
      "js": ["jquery.js", "nocomment.js"]
    }
  ]
}
